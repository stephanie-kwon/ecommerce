@using Ecommerce.Models
@model List<Item>

<!DOCTYPE html>
<html>
<head>
	<title>Dresses</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="~/css/swimtops.css"/>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <a class="navbar-brand" href="/">
                    <img src="~/images/icon.png" alt="ASP.NET" width="30" height="30"/>
                </a>
                <li class="nav-item active">
                    <a class="nav-link" href="/women-maintops">Women <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/men">Men</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Girls</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Collections</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Community</a>
                </li>
            </ul>
            </div>

            
        </nav>



    <div class="sideNav">
        <h1>Women's Dresses</h1>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/women-maintops"><strong>Tops</strong></a>
            </li>
            <ul id="list">
                <li class="nav-item">
                    <a class="nav-link" href="/tops-swim">Swim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-tanks">Tanks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-dresses">Dresses+Onesies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-shortsleeves">Short Sleeves</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-longsleeves">Long Sleeves</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-sweaters">Sweaters</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-hoodies">Hoodies+Sweatshirts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-jackets">Jackets+Coats</a>
                </li>
            </ul>

            <li class="nav-item">
                <a class="nav-link" href="#">Bottoms</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Intimates</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Accesories</a>
            </li>
        </ul>
    </div>

    <div class="topsProducts">
        <hr>
        <div class="row">
            @foreach(Item dress in Model)
            {
                @if(dress.itemCategory == "Dress")
                {
            <div class="col-sm">
                <a href="/women/@dress.itemId">
                    <img src="@dress.itemImage" alt="ASP.NET" class="topImg img-responsive" />
                </a>
                <figcaption class="itemName">@dress.itemName</figcaption>
                <figcaption>$@dress.itemPrice USD</figcaption>
            </div>
                }
            }
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script> 

</body>
</html>