@using Ecommerce.Models
@model Item

<!DOCTYPE html>
<html>
<head>
	<title>add a product</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Form.css"/>
</head>
<body>
    <h1>Add a product</h1>

        <form asp-action="Create" asp-controller="Home" method="post">
            <div class="form-group col-sm-5">
                <label asp-for="itemName">Product Name</label>
                <input type="text" class="form-control" asp-for="itemName" name="itemName">
                <span asp-validation-for="itemName"></span>
            </div>
            
            <div class="form-group col-sm-5">
                <label asp-for="itemCategory">Product Category</label>
                <input type="text" class="form-control" asp-for="itemCategory" name="itemCategory">
                <span asp-validation-for="itemCategory"></span>
            </div>
            <div class="form-group col-sm-5">
                <label asp-for="itemDesc">Product Description</label>
                <input type="text" class="form-control" asp-for="itemDesc" name="itemDesc">
                <span asp-validation-for="itemDesc"></span>
            </div>
            <div class="form-group col-sm-5">
                <label asp-for="itemImage">Product Img</label>
                <input type="text" class="form-control" asp-for="itemImage" name="itemImage">
                <span asp-validation-for="itemImage"></span>
            </div>
            <div class="form-group col-sm-5">
                <label asp-for="itemPrice">Product Price</label>
                <input type="Number" class="form-control" asp-for="itemPrice" name="itemPrice">
                <span asp-validation-for="itemPrice"></span>
                <br>
                <button type="submit" class="btn btn-outline-success float-right">Add</button>
            </div>
        </form>


</body>
</html>