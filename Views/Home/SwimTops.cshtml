@using Ecommerce.Models
@model List<Item>

<!DOCTYPE html>
<html>
<head>
	<title>swim tops</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/swimtops.css"/>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <a class="navbar-brand" href="/">
                    <img src="~/images/icon.png" alt="ASP.NET" width="30" height="30"/>
                </a>
                <li class="nav-item active">
                    <a class="nav-link" href="/women-maintops">Women <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/men">Men</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Girls</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Collections</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Community</a>
                </li>
            </ul>
            </div>
        </nav>

    <div class="sideNav">
        <h1>Women's <br> Swims</h1>

        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="/women-maintops"><strong>Tops</strong></a>
            </li>
            <ul id="list">
                <li class="nav-item">
                    <a class="nav-link" href="/tops-swim">Swim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-tanks">Tanks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-dresses">Dresses+Onesies</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-shortsleeves">Short Sleeves</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-longsleeves">Long Sleeves</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-sweaters">Sweaters</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-hoodies">Hoodies+Sweatshirts</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/women-jackets">Jackets+Coats</a>
                </li>
            </ul>

            <li class="nav-item">
                <a class="nav-link" href="#">Bottoms</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Intimates</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Accesories</a>
            </li>
        </ul>
    </div>

    <div class="topsProducts">
        <hr>
        <div class="row">
            @foreach(Item swim in Model)
            {
                @if(swim.itemCategory == "Swim")
                {
            <div class="col-sm">
                <a href="/women/@swim.itemId">
                    <img src="@swim.itemImage" alt="ASP.NET" class="topImg img-responsive" />
                </a>
                <figcaption class="itemName">@swim.itemName</figcaption>
                <figcaption>$ @swim.itemPrice USD</figcaption>
            </div>
                }
            }
        </div>
    </div>
</body>
</html>